{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_errors(registrationForm) }}
    <div class="bg-[#9fc53a] py-[50px]">
        {{ form_start(registrationForm, {'attr': {'class': 'm-auto w-[30%] bg-[#0F1b09] rounded-[10%] pb-[30px]'}}) }}
            <h2 class="text-[#9fc53a] text-center font-semibold text-[30px] pt-[10%] mb-[10%] uppercase">Inscription</h2>
            {{ form_row(registrationForm.email,  { 
                'attr': {'class': 'bg-[#9fc53a] rounded mx-[30px] mb-[10%] flex w-[85%] ' },
                'label_attr': {'class': 'text-[#9fc53a] ml-[30px]'} 
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password', 
                'attr': {'class': 'bg-[#9fc53a] rounded mx-[30px] mb-[10%] flex w-[85%]'},
                'label_attr': {'class': 'text-[#9fc53a] ml-[30px]'}
            }) }}
            {{ form_row(registrationForm.agreeTerms,  { 
                'attr': {'class': 'bg-[#9fc53a] rounded mx-[30px] mb-[10%]' },
                'label_attr': {'class': 'text-[#9fc53a] ml-[30px]'} 
            }) }}

            <button type="submit" class="btn text-[25px] rounded-full bg-[#9fc53a] text-[#0F1b09] px-[30px] flex m-auto">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
